{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "qr-mate",
    "version": "0.1.0",
    "identifier": "com.lembryo.qr-mate",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "QR Mate OSS",
                "width": 800,
                "height": 600,
                "resizable": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/icon.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
