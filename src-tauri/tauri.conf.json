{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "qr-mate-oss",
    "version": "1.0.1",
    "identifier": "com.lembryo.qr-mate-oss",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "QR Mate OSS",
                "width": 880,
                "height": 480,
                "minWidth": 880,
                "minHeight": 480,
                "resizable": true,
                "dragDropEnabled": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/icon.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
